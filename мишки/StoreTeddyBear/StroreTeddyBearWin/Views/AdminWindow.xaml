<Window x:Class="StroreTeddyBearWin.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StroreTeddyBearWin.Views"
        mc:Ignorable="d"
        Title="Окно добавления/редактирования товара" Height="450" Width="800"
        WindowState="Maximized"
        Icon="/ElementsVisualization/Image/Профиль.png">
    <Grid Background="#FFF4F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="310"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Viewbox Grid.Row="0" Grid.Column="0" Stretch="Uniform">
                <Border CornerRadius="3" Background="#F8BED4" Width="55" Height="4" Margin="3 2 3 2">
                    <TextBox x:Name="SearchTextBox" Style="{StaticResource TextBoxSearchStyle}" Margin="5 0 0 0" Text="Поиск игрушки..." FontSize="2" TextChanged="SearchTextBox_TextChanged"/>
                </Border>
            </Viewbox>

            <Viewbox Grid.Column="1" Stretch="Uniform">
                <Grid Margin="0 10">
                    <Image Width="70" Height="80" Source="/ElementsVisualization/Image/фон для правой меню.png" />
                    <Image Source="/ElementsVisualization/Image/Профиль обратный.png" x:Name="ProfileImg" Width="50" Height="50" MouseDown="ProfileImg_MouseDown"   />
                </Grid>
            </Viewbox>
        </Grid>

        <Viewbox Grid.Row="1" Stretch="Uniform">
            <ListView x:Name="BearsItemsLv"
              Height="400"
              Width="800"
              Margin="20"
              Background="#F8BED4"
              SelectionChanged="BearsItemsLv_SelectionChanged"
              ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFF4F4" 
                        BorderBrush="#F8BED4" 
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="5"
                        Width="180"
                        Height="200">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Артикул -->
                                <TextBlock Grid.Row="0" 
                                   Text="{Binding ArticulToy}" 
                                   FontWeight="Bold"
                                   FontSize="12"
                                   Foreground="#666666"/>

                                <!-- Название -->
                                <TextBlock Grid.Row="1" 
                                   Text="{Binding Title}" 
                                   FontWeight="Bold"
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   Margin="0,5,0,5"/>

                                <!-- Описание (урезанное) -->
                                <TextBlock Grid.Row="2" 
                                   Text="{Binding Descriptionn}" 
                                   FontSize="10"
                                   TextWrapping="Wrap"
                                   MaxHeight="40"
                                   TextTrimming="CharacterEllipsis"
                                   Foreground="#666666"/>

                                <!-- Цена -->
                                <TextBlock Grid.Row="3" 
                                   Text="{Binding Price, StringFormat={}{0}₽}" 
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Foreground="#E91E63"
                                   Margin="0,5,0,0"/>

                                <!-- Количество -->
                                <TextBlock Grid.Row="4" 
                                   Text="{Binding QuantityInStock, StringFormat={}В наличии: {0} шт.}" 
                                   FontSize="10"
                                   Margin="0,2,0,0"/>

                                <!-- Размеры -->
                                <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding Height}" FontSize="9" Foreground="#888888"/>
                                    <TextBlock Text=" • " FontSize="9" Foreground="#888888"/>
                                    <TextBlock Text="{Binding Weight}" FontSize="9" Foreground="#888888"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Viewbox>


        <Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform">
            <StackPanel Margin="10 0 0 0">
                <Button Margin="3" x:Name="AddBearBtn" Content="Добавить игрушку" Style="{StaticResource RoundedButtonStyle}" Background="#F8BED4" Click="AddBearBtn_Click"/>
                <Button Margin="3" x:Name="DeleteBearBtn" Content="Удалить игрушку" Style="{StaticResource RoundedButtonStyle}" Background="#F8BED4" Click="DeleteBearBtn_Click"/>
                <Button Margin="3" x:Name="RedacBearBtn" Content="Редактировать игрушку" Style="{StaticResource RoundedButtonStyle}" Background="#F8BED4" Click="RedacBearBtn_Click"/>
            </StackPanel>
        </Viewbox>

        <Grid x:Name="AddBearGrid" Grid.ColumnSpan="2" Grid.RowSpan="2" Visibility="Hidden">
            <Grid.Background>
                <SolidColorBrush Color="#FF6E6969" Opacity="0.6"/>
            </Grid.Background>
            <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform">
                <Border 
                    Margin="60"
                    BorderThickness="3"
                    BorderBrush="#fffff4f4"
                    CornerRadius="45">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFAC0D5"/>
                            <GradientStop Color="#FFEB85A7" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="10 3 10 0" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center"  HorizontalAlignment="Center" Text="Добавление игрушки" FontSize="17" Style="{StaticResource TextBlockStyle}"/>
                            <Button x:Name="CrossBtn" Click="CrossBtn_Click"  Height="25" Width="25" BorderThickness="0" Grid.Column="1"  Background="Transparent">
                                <Image Source="/ElementsVisualization/Image/cross.png" Stretch="Uniform"/>
                            </Button>
                        </Grid>
                        <TextBlock Grid.Row="1" Text="Введите название игрушки" Style="{StaticResource TextBlockStyle}" Margin="10 3"/>
                        <TextBox Grid.Row="2" x:Name="UserNameRegistrationTbox" Style="{StaticResource RoundedTextBoxStyle}"/>
                        <TextBlock Grid.Row="3" Text="Введите описание" Style="{StaticResource TextBlockStyle}" Margin="10 3"/>
                        <TextBox Grid.Row="4" Height="50" x:Name="UserEmailRegistrationTbox" Style="{StaticResource RoundedTextBoxStyle}"/>
                        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="Введите цену" Margin="10 0 33 0" Style="{StaticResource TextBlockStyle}"/>
                            <TextBox x:Name="PriceTbox" Width="120" Style="{StaticResource RoundedTextBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="Введите рост" Margin="10 0 33 0" Style="{StaticResource TextBlockStyle}"/>
                            <TextBox x:Name="HeightTbox" Width="120" Style="{StaticResource RoundedTextBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="7" Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="Введите вес" Margin="10 0 41 0" Style="{StaticResource TextBlockStyle}"/>
                            <TextBox x:Name="WeightTbox" Width="120" Style="{StaticResource RoundedTextBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="8" Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="Введите количество" Width="70" TextWrapping="Wrap" Margin="10 0 39 0" Style="{StaticResource TextBlockStyle}"/>
                            <TextBox x:Name="QuantityTbox" Width="120" Style="{StaticResource RoundedTextBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="9" Orientation="Horizontal" Margin="0 5 0 0">
                            <Button Width="90" x:Name="GetPathBtn" Margin="0 0 30 0" Style="{StaticResource RoundedButtonStyle}" Height="35" Click="GetPathBtn_Click">
                                <TextBlock Text="Выбрать изображение" TextWrapping="Wrap"/>
                            </Button>
                            <TextBox x:Name="PathToImageTbox" IsReadOnly="True" Width="120" Style="{StaticResource RoundedTextBoxStyle}"/>
                        </StackPanel>
                        
                        
                        <Button Grid.Row="10" x:Name="SetUpBearBtn" Content="Добавить" Width="200" Style="{StaticResource RoundedButtonStyle}" Margin="20 10 20 10" FontSize="15" Height="27" Click="SetUpBearBtn_Click"/>

                    </Grid>
                </Border>
            </Viewbox>
        </Grid>

    </Grid>
</Window>
