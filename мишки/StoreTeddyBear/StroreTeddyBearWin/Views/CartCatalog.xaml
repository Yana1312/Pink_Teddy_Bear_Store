<Window x:Class="StroreTeddyBearWin.Views.CartCatalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StroreTeddyBearWin.Views"
        mc:Ignorable="d"
        Title="Корзина покупателя" Height="450" Width="800"
        Icon="/ElementsVisualization/Image/Профиль.png"
        WindowState="Maximized">
    <Grid Background="#FFF4F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="0" Stretch="Uniform">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="Адрес доставки:" 
                               FontFamily="pack://application:,,,/ElementsVisualization/Shrift/PlayfairDisplay.ttf#Playfair Display"
                               FontSize="10"
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="AdressCbox"
                              Width="350"
                              Style="{StaticResource MaterialDesignComboBox}"
                              FontFamily="pack://application:,,,/ElementsVisualization/Shrift/PlayfairDisplay.ttf#Playfair Display"
                              DisplayMemberPath="AddressName"/>
                </StackPanel>
            </Viewbox>

            <Viewbox Grid.Row="1" Margin="10" Stretch="Uniform">
                <ListView x:Name="CartItemsLv"
                          Style="{StaticResource MaterialDesignListView}"
                          HorizontalAlignment="Stretch"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </Viewbox>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Viewbox Stretch="Uniform">
                <Border CornerRadius="10" Background="#FACBDB" Margin="40" Padding="5">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" FontSize="8" Text="Способы оплаты:" 
                                   FontFamily="pack://application:,,,/ElementsVisualization/Shrift/PlayfairDisplay.ttf#Playfair Display" 
                                   Margin="0,0,0,3"/>

                        <RadioButton Grid.Row="1" FontSize="7" Style="{StaticResource MaterialDesignDarkRadioButton}" 
                                     Content="Наличными" GroupName="PaymentMethod" Margin="0,1"
                                     x:Name="CashRadioBtn" IsChecked="True"/>

                        <RadioButton Grid.Row="2" Style="{StaticResource MaterialDesignDarkRadioButton}" 
                                     GroupName="PaymentMethod" Margin="0,1"
                                     x:Name="CardRadioBtn">
                            <TextBlock FontSize="7" Text="Оплата картой при получении" 
                                       TextWrapping="Wrap" TextAlignment="Left"/>
                        </RadioButton>

                    </Grid>
                </Border>
            </Viewbox>

            <Viewbox Stretch="Uniform" VerticalAlignment="Top" Grid.Column="1" Grid.RowSpan="2">
                <Grid Width="490" Height="2821" >
                    <ContentControl Content="{StaticResource MenuRight}" />
                    <Image Source="/ElementsVisualization/Image/Профиль обратный.png" Width="340" Height="340" Margin="20 130 0 0" VerticalAlignment="Top" MouseDown="BackToMainWindowImg_MouseDown" x:Name="BackToMainWindowImg"/>
                    <Image Source="/ElementsVisualization/Image/Корзина товаров.png" Width="340" Height="340" Margin="20 600 0 0" VerticalAlignment="Top" x:Name="CartBtn"/>
                </Grid>
            </Viewbox>

            <Viewbox Stretch="Uniform" Grid.Row="1" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="CreateOrderBtn" Height="25" Style="{StaticResource RoundedSquertBtnStyle}" 
                            Content="Оформить заказ" Margin="20 20 10 20" Click="CreateOrderBtn_Click"/>
                    <Button x:Name="ClearCartBtn" Height="25" Style="{StaticResource RoundedSquertBtnStyle}" 
                            Content="Очистить корзину" Margin="10 20 20 20" Click="ClearCartBtn_Click"
                            />
                </StackPanel>
            </Viewbox>
        </Grid>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Background="#FACBDB">
            <Viewbox Stretch="Uniform">
                <TextBlock Margin="20 0 4 0" 
                           x:Name="TotalAmountText"
                           Text="Итоговая сумма заказа: 0 рублей" 
                           FontSize="1" 
                           FontFamily="pack://application:,,,/ElementsVisualization/Shrift/PlayfairDisplay.ttf#Playfair Display"/>
            </Viewbox>
        </StackPanel>
    </Grid>
</Window>