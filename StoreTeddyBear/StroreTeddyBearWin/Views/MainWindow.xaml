<Window x:Class="StroreTeddyBearWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StroreTeddyBearWin"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800"
        MinHeight="450" MinWidth="800"
        Icon="/ElementsVisualization/Image/Профиль.png"
        WindowState="Maximized"
        >
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="RegistrationTextBlockStyle">
            <Setter Property="FontFamily" Value="pack://application:,,,/ElementsVisualization/Shrift/PlayfairDisplay.ttf#Playfair Display"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="9 5 0 5"/>
            <Setter Property="Foreground" Value="#2C2C2C"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../ElementsVisualization/Image/Image2.png" Stretch="Fill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Viewbox Stretch="Uniform" Margin="10 10 12 0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="PinkTb" Grid.Column="0" FontSize="57" FontFamily="pack://application:,,,/ElementsVisualization/Shrift/PlayfairDisplay.ttf#Playfair Display"  Text="Pink" Foreground="#FFFFF4F4"/>
                <TextBlock x:Name="BearTb" Grid.Column="1" FontSize="57" FontFamily="pack://application:,,,/ElementsVisualization/Shrift/PlayfairDisplay.ttf#Playfair Display"  Text="Bear" Foreground="#FFCBDB"/>
            </StackPanel>
        </Viewbox>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="2*"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Viewbox Stretch="Uniform" VerticalAlignment="Top">
                <Grid>
                    <ContentControl HorizontalAlignment="Right" Content="{StaticResource MenuUpPath}"/>
                    <Button x:Name="ReviewsBtn" Height="55" Margin="0 0 285 70" Style="{StaticResource RoundedButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderBrush="Transparent" Background="Transparent"  FontSize="35" Content="Отзывы" Click="ReviewsBtn_Click"/>
                    <Button x:Name="CatalogBtn" Height="55" Margin="0 0 115 70" Style="{StaticResource RoundedButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderBrush="Transparent" Background="Transparent" FontSize="35"  Content="Каталог" Click="CatalogBtn_Click"/>
                    <Image x:Name="ProfileImg" Margin="360 0 0 30" Source="/ElementsVisualization/Image/Профиль.png" Width="60" Height="60" />
                </Grid>
            </Viewbox>

            <Viewbox Margin="0 0 10 0" Stretch="Uniform" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Margin="0 0 60 0" Text="Введите ваш пароль" FontFamily="pack://application:,,,/ElementsVisualization/Shrift/PlayfairDisplay.ttf#Playfair Display" Foreground="#fffff4f4"/>
                    <TextBox Visibility="Hidden" Grid.Row="1" x:Name="PasswordAuthorizatoinTbox" Style="{StaticResource RoundedTextBoxStyle}"/>
                    <PasswordBox Grid.Row="1" Grid.Column="2" x:Name="PasswordAuthorizationPbox" Style="{StaticResource RoundedPasswordBoxStyle}"/>
                    <CheckBox Grid.Row="2" HorizontalAlignment="Right" Margin="12,4" FontSize="11"  x:Name="ShowPasswordAuthorizationCbox"  Content="Показать пароль" Style="{StaticResource CheckBoxStyle}" Checked="ShowPasswordCbox_Checked" Unchecked="ShowPasswordCbox_Unchecked">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                    <TextBlock Grid.Row="3" Margin="0 0 60 0" Text="Введите вашу почту" FontFamily="pack://application:,,,/ElementsVisualization/Shrift/PlayfairDisplay.ttf#Playfair Display" Foreground="#fffff4f4"/>
                    <TextBox Grid.Row="4" x:Name="EmailTbox" Style="{StaticResource RoundedTextBoxStyle}"/>
                    <Button Grid.Row="5" x:Name="RegistrationBtn" Content="Зарегистрироваться" FontSize="8" Height="18" BorderBrush="Transparent" Background="Transparent" HorizontalAlignment="Right" Style="{StaticResource RoundedButtonStyle}" Click="RegistrationBtn_Click"/>
                    <Button Grid.Row="6" x:Name="EnterBtn"  Margin="30 0" Content="Войти" Click="EnterBtn_Click">
                        <Button.Style>
                            <Style BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFDCDC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!--<Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FFDCDC"/>
                                    </Trigger>

                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>-->
                    </Button>
                    <Button Grid.Row="7" x:Name="ForgotPasswordBtn" Content="Забыли пароль?" HorizontalAlignment="Right" FontSize="8" Height="18" BorderBrush="Transparent" Background="Transparent" Style="{StaticResource RoundedButtonStyle}" Click="ForgotPasswordBtn_Click"/>
                </Grid>
            </Viewbox>
        </Grid>

        <Grid x:Name="RegistrationWindow" Grid.ColumnSpan="3" Visibility="Hidden">
            <Grid.Background>
                <SolidColorBrush Color="#FF6E6969" Opacity="0.6"/>
            </Grid.Background>
            <Viewbox VerticalAlignment="Center"
                    HorizontalAlignment="Center" Stretch="Uniform"
                    >
                <Border 
                    Margin="60"
                    BorderThickness="3"
                    BorderBrush="#fffff4f4"
                    CornerRadius="45">       
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFAC0D5"/>
                            <GradientStop Color="#FFEB85A7" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="10 3 10 0" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center"  HorizontalAlignment="Center" Style="{StaticResource RegistrationTextBlockStyle}" Text="Регистрация" FontSize="17"/>
                            <Button x:Name="CrossBtn" Click="CrossBtn_Click" Height="25" Width="25" BorderThickness="0" Grid.Column="1"  Background="Transparent">
                                <Image Source="/ElementsVisualization/Image/cross.png" Stretch="Uniform"/>
                            </Button>
                        </Grid>
                        <TextBlock Grid.Row="1" Text="Ваше имя" Style="{StaticResource RegistrationTextBlockStyle}"/>
                        <TextBox Grid.Row="2" x:Name="UserNameRegistrationTbox" Style="{StaticResource RoundedTextBoxStyle}"/>
                        <TextBlock Grid.Row="3" Text="Введите почту" Style="{StaticResource RegistrationTextBlockStyle}"/>
                        <TextBox Grid.Row="4" x:Name="UserEmailRegistrationTbox" Style="{StaticResource RoundedTextBoxStyle}"/>
                        <TextBlock Grid.Row="5" Text="Придумайте пароль" Style="{StaticResource RegistrationTextBlockStyle}"/>
                        <TextBox Grid.Row="6" Visibility="Hidden" x:Name="UserPasswordRegistrationTbox" Style="{StaticResource RoundedTextBoxStyle}"/>
                        <PasswordBox Grid.Row="6" x:Name="UserPasswordRegistrationPbox" Style="{StaticResource RoundedPasswordBoxStyle}"/>
                        <CheckBox Grid.Row="7" Content="Показать пароль" IsChecked="False" x:Name="ShowPasswordRegistrationCbox" Style="{StaticResource CheckBoxStyle}" Margin="9 5 0 5" Checked="ShowPasswordCbox_Checked" Unchecked="ShowPasswordCbox_Unchecked"/>
                        <Button Grid.Row="8" x:Name="SignUpBtn" Content="Зарегистрироваться" Width="200" Style="{StaticResource RoundedButtonStyle}" Margin="20 5 20 10" FontSize="15" Height="27" Click="SignUpBtn_Click"/>
                    </Grid>
                </Border>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
